@page "/enrollpage/{id}"

<table>
    <tr>
        <td><h1>ShowEnrollment</h1></td>
    </tr>
</table>
<table>
    <tr>
        <td>
            <a href="addstudent">Create New</a>
        </td>
    </tr> 
</table>
<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>CourseID</th>
            <th>Title</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enr in Enrollments)
        {
            <tr>
                <td>@enr.courseID</td>
                <td>@enr.title</td>
                <td>@enr.credits</td>
            </tr>
        }
    </tbody>
</table>